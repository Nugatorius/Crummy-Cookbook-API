  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Nugatorius/Crummy-Cookbook-API/issues"
  },
  "homepage": "https://github.com/Nugatorius/Crummy-Cookbook-API#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.37.5",
    "sequelize-cli": "^4.0.0",
    "winston": "^3.0.0-rc4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.3",
    "sinon": "^4.5.0",
    "supertest": "^3.0.0"
  }
