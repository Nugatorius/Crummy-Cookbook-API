{
  "name": "crummy-cookbook-api",
  "version": "1.0.0",
  "description": "API for the Crummy Cookbook application",
  "main": "app/index.js",
  "scripts": {
    "start": "nodemon app/.",
    "test:unit": "./node_modules/mocha/bin/mocha __tests__/unit/",
